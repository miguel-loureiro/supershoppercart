<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Simple, lightweight prod logs -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c{1} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Your app -->
        <Logger name="com.supershopcart" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Quiet frameworks -->
        <Logger name="org.springframework" level="warn"/>
        <Logger name="org.hibernate" level="warn"/>
        <Logger name="com.google" level="warn"/>
        <Logger name="io.grpc" level="warn"/>
        <Logger name="com.google.firebase" level="warn"/>

        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>